<% if comment.id %>
  <%= image_tag comment.user.avatar.url(:comment) %>
  <%= link_to comment.user.name, comment.user %>:
  <%= comment.content %></br>
  <%= image_tag comment.picture.url if comment.picture? %>
  <%= time_ago_in_words(comment.created_at) %>
  <%= link_to "", comment_path(comment), method: :delete, data: {confirm: "You sure?"}, class: "glyphicon glyphicon-remove text-danger" if current_user? comment.user%>
  </br></br>
<% end %>
