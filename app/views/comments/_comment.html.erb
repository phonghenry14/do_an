<% if comment.id %>
  <%= gravatar_for comment.user, size: 15 %>
  <%= link_to comment.user.name, comment.user %>:
  <%= comment.content %></br>
  <%= image_tag comment.picture.url if comment.picture? %>
  <%= time_ago_in_words(comment.created_at) %>
  <%= link_to "delete", comment_path(comment), method: :delete, data: {confirm: "You sure?"} if current_user? comment.user%>
  </br></br>
<% end %>
