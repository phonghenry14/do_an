<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/search' %>
      </section>
      <section class="group">
        <%= render 'shared/group' %>
      </section>
    </aside>
    <aside class="col-md-7">
      <h3>Statuses Feed</h3>
      <section class="micropost_form">
        <%= render 'shared/status_form' %>
      </section>
      <%= render 'shared/feed' %>
    </aside>
    <aside class="col-md-2">
      <section>
        <%= render 'shared/friend_online' %>
      </section>
      <section class="event">
        <%= render 'shared/event' %>
      </section>
    </aside>
  </div>
<% end %>

<%= subscribe_to "/comments/new" %>
