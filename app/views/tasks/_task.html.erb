<li id="<%= task.id %>">
  <span class="user">
    Assignee:
    <%= link_to task.user.name, task.user %>
  </span>
  <br>
  <span class="timestamp text-success">
    <%= link_to "Posted #{time_ago_in_words(task.created_at)} ago.", task %>
    <% if current_user? task.group.admin %>
      <%= link_to "", task, method: :delete, data: {confirm: "You sure?"}, class: "glyphicon glyphicon-remove text-danger" %>
    <% end %>
  </span></br></br>
  <span class="content">
     Name:
     <%= best_in_place_if current_user?(task.group.admin), task, :name, :ok_button => "ok", :ok_button_class => "btn btn-success ", :cancel_button => "X", :cancel_button_class => "btn btn-danger" %></br>
    Content:
    <%= best_in_place_if current_user?(task.group.admin), task, :content, :ok_button => "ok", :ok_button_class => "btn btn-success ", :cancel_button => "X", :cancel_button_class => "btn btn-danger" %></br>
    Deadline:
    <%= task.deadline %>
  </span></br>
  <span>
    <% if current_user.liked? task %>
      <%= link_to "Unlike", unlike_task_path(task), class: 'vote', method: :put, remote: true, data: { toggle_text: 'Like', toggle_href: like_task_path(task), id: task.id } %>
    <% else %>
      <%= link_to "Like", like_task_path(task), class: 'vote', method: :put, remote: true, data: { toggle_text: 'Unlike', toggle_href: unlike_task_path(task), id: task.id } %>
    <% end %>
  </span>
  <span class="votes-count" data-id="<%= task.id %>">
    <%= task.get_likes.size %>
  </span>
  Likes</br></br>
  Comments:</br>
  <% @comments = task.comments %>
  <span id="chat">
    <%= render @comments %>
  </span>

  <%= form_for Comment.new , remote: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.hidden_field :task_id, value: task.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.text_area :content, placeholder: "Compose new comment..." %>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
    <%= f.submit "Comment", class: "btn btn-primary" %>
  <% end %>
</li>
</br>

<script>
  data = <%= raw User.pluck(:name).compact.to_json %>;
  $('textarea').atwho({at:"@", 'data':data});
</script>
