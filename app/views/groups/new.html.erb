<%= form_for @group do |f| %>
  <div class="field">
    <%= f.label :groupname %><br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div class="field">
    <%= f.hidden_field :admin_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
